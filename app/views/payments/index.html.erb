<h1>Карта</h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Amount</th>
    <th>Receiver</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @payments.each do |payment| %>
    <tr>
      <td><%= payment.title %></td>
      <td><%= payment.amount %></td>
      <td><%= payment.email %></td>
    </tr>
  <% end %>
  </tbody>
</table>

